{
  "info": {
    "name": "Obsidian Task Manager API",
    "description": "API коллекция для Obsidian Task Manager.\n\nПеред использованием установите переменную `api_key` в значение вашего API ключа.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "api_key",
      "value": "dev-api-key-change-in-production",
      "type": "string"
    }
  ],
  "auth": {
    "type": "apikey",
    "apikey": [
      {
        "key": "key",
        "value": "X-API-Key",
        "type": "string"
      },
      {
        "key": "value",
        "value": "{{api_key}}",
        "type": "string"
      },
      {
        "key": "in",
        "value": "header",
        "type": "string"
      }
    ]
  },
  "item": [
    {
      "name": "Health & Info",
      "item": [
        {
          "name": "Root - API Info",
          "request": {
            "auth": { "type": "noauth" },
            "method": "GET",
            "url": "{{base_url}}/"
          }
        },
        {
          "name": "Health Check",
          "request": {
            "auth": { "type": "noauth" },
            "method": "GET",
            "url": "{{base_url}}/health"
          }
        }
      ]
    },
    {
      "name": "Projects",
      "item": [
        {
          "name": "Create Project",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/projects",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"New Project\",\n  \"description\": \"Project description\",\n  \"color\": \"#3B82F6\"\n}"
            }
          }
        },
        {
          "name": "Get All Projects",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/projects?skip=0&limit=20&include_archived=false",
              "host": ["{{base_url}}"],
              "path": ["projects"],
              "query": [
                { "key": "skip", "value": "0" },
                { "key": "limit", "value": "20" },
                { "key": "include_archived", "value": "false" }
              ]
            }
          }
        },
        {
          "name": "Get Project by ID",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/projects/1"
          }
        },
        {
          "name": "Update Project",
          "request": {
            "method": "PUT",
            "url": "{{base_url}}/projects/1",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\",\n  \"color\": \"#FF0000\"\n}"
            }
          }
        },
        {
          "name": "Archive Project",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/projects/1/archive"
          }
        },
        {
          "name": "Unarchive Project",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/projects/1/unarchive"
          }
        },
        {
          "name": "Get Project Stats",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/projects/1/stats"
          }
        },
        {
          "name": "Delete Project",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/projects/1?force=false",
              "host": ["{{base_url}}"],
              "path": ["projects", "1"],
              "query": [
                { "key": "force", "value": "false" }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Tasks",
      "item": [
        {
          "name": "Get Tasks (with filters)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/tasks?status=todo&priority=high&skip=0&limit=20",
              "host": ["{{base_url}}"],
              "path": ["tasks"],
              "query": [
                { "key": "status", "value": "todo", "description": "todo, in_progress, done, cancelled" },
                { "key": "priority", "value": "high", "description": "low, medium, high, critical" },
                { "key": "project_id", "value": "", "disabled": true },
                { "key": "skip", "value": "0" },
                { "key": "limit", "value": "20" }
              ]
            }
          }
        },
        {
          "name": "Create Task",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/tasks",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"New Task\",\n  \"description\": \"Task description\",\n  \"project_id\": 1,\n  \"priority\": \"high\",\n  \"status\": \"todo\",\n  \"due_date\": \"2026-01-30\",\n  \"tag_names\": [\"python\", \"backend\"]\n}"
            }
          }
        },
        {
          "name": "Get Task by ID",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/tasks/1"
          }
        },
        {
          "name": "Update Task",
          "request": {
            "method": "PUT",
            "url": "{{base_url}}/tasks/1",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Title\",\n  \"status\": \"in_progress\",\n  \"priority\": \"high\"\n}"
            }
          }
        },
        {
          "name": "Complete Task",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/tasks/1/complete"
          }
        },
        {
          "name": "Get Tasks by Project",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/tasks/by-project/1?include_completed=false&root_only=false",
              "host": ["{{base_url}}"],
              "path": ["tasks", "by-project", "1"],
              "query": [
                { "key": "include_completed", "value": "false" },
                { "key": "root_only", "value": "false" }
              ]
            }
          }
        },
        {
          "name": "Get Overdue Tasks",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/tasks/overdue"
          }
        },
        {
          "name": "Add Tags to Task",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/tasks/1/tags",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "[\"urgent\", \"bug\"]"
            }
          }
        },
        {
          "name": "Remove Tag from Task",
          "request": {
            "method": "DELETE",
            "url": "{{base_url}}/tasks/1/tags/urgent"
          }
        },
        {
          "name": "Add Comment",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/tasks/1/comments",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"content\": \"This is a comment with **markdown** support\"\n}"
            }
          }
        },
        {
          "name": "Get Task Hierarchy",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/tasks/1/hierarchy"
          }
        },
        {
          "name": "Get Task Stats",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/tasks/1/stats"
          }
        },
        {
          "name": "Delete Task",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/tasks/1?force=false",
              "host": ["{{base_url}}"],
              "path": ["tasks", "1"],
              "query": [
                { "key": "force", "value": "false" }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Tags",
      "item": [
        {
          "name": "Create Tag",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/tags",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"new-tag\"\n}"
            }
          }
        },
        {
          "name": "Get All Tags",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/tags"
          }
        },
        {
          "name": "Get Popular Tags",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{base_url}}/tags/popular?limit=10",
              "host": ["{{base_url}}"],
              "path": ["tags", "popular"],
              "query": [
                { "key": "limit", "value": "10" }
              ]
            }
          }
        },
        {
          "name": "Get Unused Tags",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/tags/unused"
          }
        },
        {
          "name": "Get Tag by ID",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/tags/1"
          }
        },
        {
          "name": "Rename Tag",
          "request": {
            "method": "PUT",
            "url": "{{base_url}}/tags/1",
            "header": [
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"renamed-tag\"\n}"
            }
          }
        },
        {
          "name": "Merge Tags",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/tags/1/merge/2"
          }
        },
        {
          "name": "Get Tag Stats",
          "request": {
            "method": "GET",
            "url": "{{base_url}}/tags/1/stats"
          }
        },
        {
          "name": "Cleanup Unused Tags",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/tags/cleanup"
          }
        },
        {
          "name": "Delete Tag",
          "request": {
            "method": "DELETE",
            "url": {
              "raw": "{{base_url}}/tags/1?force=false",
              "host": ["{{base_url}}"],
              "path": ["tags", "1"],
              "query": [
                { "key": "force", "value": "false" }
              ]
            }
          }
        }
      ]
    }
  ]
}
